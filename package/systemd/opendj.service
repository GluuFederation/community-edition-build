[Unit]
Description=OpenDJ Directory Service
After=syslog.target
StartLimitIntervalSec=600
StartLimitBurst=5

[Service]
Environment=OPENDJ_JAVA_HOME=/opt/jre
Type=simple
Restart=on-failure
RestartSec=30s
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
ExecStart=/opt/opendj/bin/start-ds
ExecStop=/opt/opendj/bin/stop-ds
User=ldap
Group=ldap

[Install]
WantedBy=multi-user.target
