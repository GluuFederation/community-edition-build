[Unit]
Description=oxd-server daemon
After=network.target
StartLimitIntervalSec=600
StartLimitBurst=5

[Service]
Type=forking
ExecStart=/opt/oxd-server/bin/oxd-server start
ExecStop=/opt/oxd-server/bin/oxd-server stop
Restart=on-failure
RestartSec=30s
RemainAfterExit=yes
User=jetty
Group=jetty

[Install]
WantedBy=multi-user.target
