[Unit]
Description=Identity service
After=oxauth.service opendj.service
StartLimitIntervalSec=600
StartLimitBurst=5

[Service]
Restart=on-failure
RestartSec=30s
Type=forking
ExecStart=/opt/dist/scripts/identity start
ExecStop=/opt/dist/scripts/identity stop
User=jetty
Group=jetty

[Install]
WantedBy=multi-user.target
